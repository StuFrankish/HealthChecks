<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <Nullable>enable</Nullable>
	<IsPackable>true</IsPackable>
    <ImplicitUsings>enable</ImplicitUsings>
    <OutputType>Library</OutputType>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>Uptime HealthCheck</Title>
    <Version>2.0.1</Version>
    <Authors>Stu Frankish</Authors>
    <Company>Stu Frankish</Company>
    <Description>application uptime Healthcheck extension.</Description>
    <PackageProjectUrl>https://github.com/StuFrankish/HealthChecks</PackageProjectUrl>
    <RepositoryUrl>https://github.com/StuFrankish/HealthChecks</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>uptime;healthcheck</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Diagnostics.HealthChecks" Version="8.0.2" />
    <PackageReference Include="Microsoft.Extensions.Diagnostics.HealthChecks.Abstractions" Version="8.0.2" />
  </ItemGroup>

</Project>
